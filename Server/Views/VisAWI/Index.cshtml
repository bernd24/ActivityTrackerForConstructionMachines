            <th>
                @Html.DisplayNameFor(model => model.DisagreeRather)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Neutral)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgreeRather)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agree)
            </th>
