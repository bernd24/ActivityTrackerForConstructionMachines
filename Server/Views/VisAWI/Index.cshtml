                @Html.DisplayFor(modelItem => item.AgreeRather)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Agree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgreeEtAll)
            </td>
            <td>
