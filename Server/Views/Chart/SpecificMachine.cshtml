<section class="features-icons bg-light text-start">
  <div class="container-fluid">
    @*  here should be the name of the User *@
      <div class="d-sm-flex align-items-center justify-content-between mb-4">
          <h1 class="h1 mb-0 text-gray-800" > Hello Sebastian</h1>
          @* @foreach (var item in Model)
          {
            @item.InternalId
          } *@
      </div>
  </div>
  <div class="container-fluid row">
    <div class="card" >
      <!-- Card content -->
      <div class="card-body">
      <!-- Title -->
      <h2 class="card-title"><a><div class="en">Excavator EC950F</div><div class="sv">Maskiner</div><div class="de">Maschinen</div></a></h2>
      <!-- Text -->
      <p class="card-text"> 
        <div class="en">Detailed Statistiks obout the selected Machine.</div>
        <div class="sv">Se alla maskiner i systemet.</div>
        <div class="de">Zeigt alle Maschinen im System an.</div>
      </p>
    </div>
  </div>

  <!-- Card for the Pie Chart for the Emission from this specific Machine-->
  <div class="container-fluid row" name="Linechart">
      <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body justify-content-center">
          <!-- Page Heading -->
          <div class="d-sm-flex mb-4 justify-content-center">
            <h1 class="h1 mb-0 text-gray-800" >Sensoren </h1>
          </div>
          <div class="content">
            <canvas id="myLineChart" ></canvas>
          </div>
        </div>
      </div>
  </div>

  <div class="container-fluid p-0">
    <div class="row g-0">
      <!-- Card for the Pie Chart for all Activities-->
      <div class="col-lg-6 order-lg-1 " >
        <div class="card border-left-primary shadow h-100 py-2">
          <div class="card-body justify-content-center">
            <!-- Page Heading -->
            <div class="d-sm-flex mb-4 justify-content-center ">
              <h1 class="h1 mb-0 text-gray-800">Sensoren </h1>
            </div>
            <div class="row">
              <canvas id="myDoughnutChart" class="doughnutChart" ></canvas>
            </div>
          </div>
        </div>
      </div>

      <!-- Card for Infos  about the sensors and activities-->
      <div class="col-lg-6 order-lg-2 ">
        <div class="card border-left-primary shadow h-100 py-2">
          <div class="card-body  justify-content-center">
              <!-- Page Heading -->
            <div class="d-sm-flex mb-4 justify-content-center">
              <h1 class="h1 mb-0 text-gray-800" >Sensoren </h1>
            </div>

            <!-- Card for Nodetype and Battery status-->
            <div class="mb-4">
              <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center ">
                    <div class="col mr-2 ">
                      <div class="text-xs font-weight-bold text-primary text-uppercase mb-1 ">
                            Nodetype</div>
                      <div class="h5 mb-0 font-weight-bold text-gray-800">Slave</div>
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-calendar fa-2x text-gray-300"></i>
                    </div>

                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Battery status
                      </div>
                      <div class="row no-gutters align-items-center">
                        <div class="col-auto">
                          <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">50%</div>
                        </div>
                        <div class="col">
                          <div class="progress progress-sm mr-2">
                            <div class="progress-bar bg-info" role="progressbar"
                                style="width: 50%" aria-valuenow="50" aria-valuemin="0"
                                aria-valuemax="100"></div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Cards for Positions and sensortype -->
            <div class=" mb-4">
              <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center ">
                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                          Positions</div>
                      <div class="h5 mb-0 font-weight-bold text-gray-800">2</div>
                      </div>
                      <div class="col-auto">
                        <i class="fas fa-calendar fa-2x text-gray-300"></i>
                      </div>

                      <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Sensortype</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">2</div>
                      </div>
                      <div class="col-auto">
                        <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                      </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Card for Activities and RSSI Partner -->
            <div class="mb-4">
              <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Activities</div>
                      <div class="h5 mb-0 font-weight-bold text-gray-800">3</div>
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                    </div>

                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                          RSSI-Partner</div>
                      <div class="h5 mb-0 font-weight-bold text-gray-800">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="rgba(var(--bs-success-rgb))" class="bi bi-1-square-fill" viewBox="0 0 16 16">
                          <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2Zm7.283 4.002V12H7.971V5.338h-.065L6.072 6.656V5.385l1.899-1.383h1.312Z"/>
                        </svg>
                      </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Card to the SensorInstallation -->
            <div class="mb-6 ">
              <div class="card border-left-warning shadow h-100 py-2 ">
                <div class="card-body align-self-center align-content-center">
                  <h1 class="card-title text-black align-self-center ">Instalation and Details</h1>
                  <p class="card-text">Click here to see details or Install new Sensor</p>
                  <a type="button" class="btn btn-primary me-2 justify-content-center align-content-center align-items-center align-self-center"   asp-area="" asp-controller="Installation" asp-action="Show">
                    <div class="en">see Details</div>
                    <div class="de">Registriere  Maschine</div>
                    <div class="sv">Registriere  Maschien</div>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div> 
  </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>